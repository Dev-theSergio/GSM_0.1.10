<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/white"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        tools:ignore="UselessParent">

        <TextView
            android:id="@id/textViewChannel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:ellipsize="end"
            android:fontFamily="@font/baloo"
            android:gravity="center_vertical"
            android:text="@string/Slave"
            android:textColor="@color/material_gray_600"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dsgSwitchCast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelSwitchCast"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:text="@string/Designator"
            android:textAllCaps="false"
            android:textColor="@color/gray_light"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="RelativeOverlap" />


        <Switch
            android:id="@+id/switchCast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:layout_marginEnd="5dp"
            android:background="@drawable/background_switch"
            android:gravity="center_vertical"
            android:hapticFeedbackEnabled="true"
            android:padding="2dp"
            android:shadowRadius="5"
            android:track="@drawable/switch_track_selector" />

        <TextView
            android:id="@+id/labelSwitchCast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textViewChannel"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/textViewChannel"
            android:ellipsize="end"
            android:fontFamily="@font/baloo"
            android:gravity="center_vertical"
            android:text="@string/channelNumber"
            android:textColor="@color/material_gray_600"
            android:textSize="16sp"
            android:textStyle="bold" />


    </RelativeLayout>

</android.support.v7.widget.CardView>